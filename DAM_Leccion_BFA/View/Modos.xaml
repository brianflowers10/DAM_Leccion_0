<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DAM_Leccion_BFA.View.Modos"
             Title="Modos">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Entry x:Name="txt1" Placeholder="Texto1" Text="Hola MAUI 1"></Entry>
        <Entry x:Name="txt2" Placeholder="Texto2" Text="{Binding Source={x:Reference txt1}, Path=Text, Mode=TwoWay}"></Entry>

    </VerticalStackLayout>
</ContentPage>